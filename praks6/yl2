#!/bin/bash

# K체sime kasutajalt suvalist t채isarvu
read -p "Sisesta suvaline t채isarv: " number

# Arvutame numbrite summa
summa=0
for (( i=0; i<${#number}; i++ )); do
    digit=${number:$i:1}
    if [[ $digit =~ [0-9] ]]; then
        summa=$((summa + digit))
    fi
done

# V채ljastame tulemuse
echo "Arvu $number numbrite summa on $summa"
